{
  "name": "@git-cms/core",
  "version": "0.1.0",
  "description": "Git-based CMS for Next.js - Store content as markdown in GitHub",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "default": "./dist/api/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "gray-matter": "^4.0.3",
    "next-auth": "^5.0.0-beta.25"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "cms",
    "nextjs",
    "markdown",
    "github",
    "git-based-cms",
    "headless-cms"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/git-cms"
  },
  "license": "MIT"
}
